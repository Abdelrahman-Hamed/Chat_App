        </GridPane>-->
        <BorderPane>
            <top>
                <HBox prefHeight="101.0" style="-fx-border-color: #ffffff  #ffffff  #1e82dc #ffffff;">
                    <padding>
                        <Insets left="10.0" top="10.0" right="30.0" bottom="20.0"/>
                    </padding>
                    <HBox HBox.hgrow="ALWAYS" maxWidth="Infinity" alignment="CENTER_LEFT">
                        <Circle fx:id="receiverImage" fill="#f0f3f5" radius="38.0">
                            <HBox.margin>
                                <Insets left="10.0" top="10.0"/>
                            </HBox.margin>
                        </Circle>
                        <Label fx:id="receiverNameLabel" prefHeight="91.0" prefWidth="201.0"
                               style="-fx-text-fill: #1e82dc;"
                               text="">
                            <font>
                                <Font name="Comic Sans MS Bold" size="18.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="15.0"/>
                            </HBox.margin>
                        </Label>
                    </HBox>
                    <HBox HBox.hgrow="ALWAYS" maxWidth="Infinity" alignment="CENTER_RIGHT">
                        <FontIcon iconColor="#1e82dc" iconLiteral="dashicons-video-alt2" iconSize="30">
                            <HBox.margin>
                                <Insets left="110.0" right="15.0" top="35.0"/>
                            </HBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </FontIcon>
                        <FontIcon iconColor="#1e82dc" iconLiteral="dashicons-phone" iconSize="30" >
                            <HBox.margin>
                                <Insets right="15.0" top="35.0"/>
                            </HBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </FontIcon>
                        <FontIcon iconColor="#1e82dc" iconLiteral="dashicons-paperclip" iconSize="30"
                                  onMouseClicked="#chooseFile" wrappingWidth="28.25">
                            <HBox.margin>
                                <Insets top="35.0"/>
                            </HBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </FontIcon>
                    </HBox>

                </HBox>
            </top>
            <center>
                <ScrollPane fx:id="chatArea_scroll" >
                    <VBox fx:id="view"/>
                </ScrollPane>
            </center>
            <bottom>

                <BorderPane>
                    <center>
                        <HBox fx:id="chatArea_hbox" prefHeight="95.0">
                            <padding>
                                <Insets left="10.0" top="10.0" right="30.0" bottom="20.0"/>
                            </padding>
                            <FontIcon fx:id="microphoneId" iconColor="#1e82dc" iconLiteral="dashicons-microphone"
                                      iconSize="35">
                                <HBox.margin>
                                    <Insets left="15.0" top="25.0"/>
                                </HBox.margin>
                                <cursor>
                                    <Cursor fx:constant="HAND"/>
                                </cursor>
                            </FontIcon>
                            <TextArea fx:id="messageTextArea" prefHeight="68.0" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                                      promptText="Enter Your Message" stylesheets="@../textArea.css" wrapText="true">
                                <HBox.margin>
                                    <Insets left="10.0" top="15.0"/>
                                </HBox.margin>
                                <!--<styleClass>
                                    <String fx:value="content"/>
                                    <String fx:value="scroll-pane"/>
                                    <String fx:value="text-area"/>
                                </styleClass>-->
                                <padding>
                                    <Insets left="5.0" top="5.0"/>
                                </padding>
                                <cursor>
                                    <Cursor fx:constant="TEXT"/>
                                </cursor>
                            </TextArea>
                            <Button fx:id="sendButton" minWidth="49.0" mnemonicParsing="false" onAction="#send"
                                    prefHeight="36.0" prefWidth="53.0"
                                    style="-fx-border-radius: 30; -fx-background-radius: 30; -fx-font-size: 18; -fx-font-weight: bold; -fx-font-family: Comic Sans MS; -fx-background-color: #1e82dc; -fx-text-fill: white; ">
                                <HBox.margin>
                                    <Insets left="20.0" right="10.0" top="15.0"/>
                                </HBox.margin>
                                <font>
                                    <Font name="System Bold" size="18.0"/>
                                </font>
                                <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="dashicons-controls-play" iconSize="40"
                                              wrappingWidth="35.0">
                                        <cursor>
                                            <Cursor fx:constant="HAND"/>
                                        </cursor>
                                    </FontIcon>
                                </graphic>
                            </Button>
                        </HBox>
                    </center>
                </BorderPane>

            </bottom>
        </BorderPane>
        <!--</AnchorPane>-->
    </center>
    <bottom>

    </bottom>
</BorderPane>
