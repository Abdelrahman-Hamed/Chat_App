<BorderPane fx:id="mainWindow" prefHeight="500.0" prefWidth="900.0" stylesheets="@../chat.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <HBox>
            <Pane fx:id="sidePanel" prefHeight="600.0" prefWidth="86.0" style="-fx-background-color: #045ba5;"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                <FontIcon fx:id="friendList" iconColor="WHITE" iconLiteral="oct-person" iconSize="30" layoutX="30.0"
                          layoutY="140.0" selectionFill="#1e82dc" styleClass="sidebar_icon"/>
                <FontIcon fx:id="groupIcon" iconColor="WHITE" iconLiteral="dashicons-groups" iconSize="35"
                          layoutX="24.0"
                          layoutY="200.0" selectionFill="#1e82dc" styleClass="sidebar_icon"/>
                <FontIcon fx:id="logoutIcon" iconColor="WHITE" iconLiteral="oi-account-logout" iconSize="30"
                          layoutX="30.0"
                          layoutY="555.0" onMouseClicked="#signMeOut" selectionFill="#1e82dc"
                          styleClass="sidebar_icon"/>
                <FontIcon fx:id="friendRequest" iconColor="WHITE" iconLiteral="enty-add-user" iconSize="30"
                          layoutX="29.0"
                          layoutY="260.0" selectionFill="#1e82dc" styleClass="sidebar_icon"/>
                <FontIcon fx:id="notificationIcon" iconColor="WHITE" iconLiteral="gmi-notifications" iconSize="35"
                          layoutX="23.0" layoutY="315.0" selectionFill="#1e82dc" styleClass="sidebar_icon"/>
                <FontIcon fx:id="saveChatIcon" iconColor="WHITE" iconLiteral="oct-file" iconSize="30" layoutX="29.0"
                          layoutY="367.0" onMouseClicked="#saveChat" selectionFill="#1e82dc" styleClass="sidebar_icon"/>
                <Circle fx:id="status" fill="DODGERBLUE" layoutX="43.0" layoutY="48.0"
                        onMouseClicked="#changeUserStatus"
                        radius="41.0" stroke="BLACK" strokeType="INSIDE"/>
                <Circle fx:id="userImage" fill="WHITE" layoutX="44.0" layoutY="48.0" radius="31.0" stroke="#7eff21"
                        strokeType="INSIDE" strokeWidth="5.0"/>
                <FontIcon fx:id="ProfileIcon" iconColor="WHITE" iconLiteral="oct-file" iconSize="30" layoutX="30.0"
                          layoutY="407.0" onMouseClicked="#ProfileButtonClicked" selectionFill="#1e82dc"
                          styleClass="sidebar_icon"/>
            </Pane>
            <VBox fx:id="contactsView" layoutX="86.0" prefHeight="600.0" prefWidth="350"
                  style="-fx-background-color: #1e82dc;">
                <HBox fx:id="searchArea" alignment="CENTER" prefHeight="74.0" prefWidth="257.0">
                    <TextField fx:id="searchTextField" prefHeight="38.0" prefWidth="287.0" promptText="Search"
                               style="-fx-background-color: white; -fx-background-radius: 30; -fx-border-radius: 30;">
                        <HBox.margin>
                            <Insets left="20.0" top="0.0"/>
                        </HBox.margin>
                    </TextField>
                </HBox>
                <VBox fx:id="contactsList" onMouseClicked="#getSelectedContact" prefHeight="496.0" prefWidth="257.0"/>
            </VBox>
        </HBox>
    </left>
    <center>
        <!--
              <AnchorPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0">
        -->
